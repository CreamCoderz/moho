<?xml version="1.0" encoding="UTF-8"?>
<sip-app>
  <app-name>MohoSampleSampleAutowire</app-name>

  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>com.voxeo.moho.sip.SIPController</servlet-class>
    <init-param>
      <param-name>ApplicationClass</param-name>
      <param-value>com.voxeo.moho.sample.SampleAutowire</param-value>
    </init-param>
    <init-param>
      <param-name>MediaLocation</param-name>
      <param-value>ftp://test/test.mp3
      </param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-selection>
    <main-servlet>Controller</main-servlet>
  </servlet-selection>
</sip-app>